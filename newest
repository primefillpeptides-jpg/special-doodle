    </button>
  </form>
</section>
<script>
  const ack1 = document.getElementById('ack1');
  const ack2 = document.getElementById('ack2');
  const orderForm = document.getElementById('orderForm');
  function updateFormState() {
    if (ack1.checked && ack2.checked) {
      orderForm.classList.remove('opacity-50', 'pointer-events-none');
    } else {
      orderForm.classList.add('opacity-50', 'pointer-events-none');
    }
  }
  ack1.addEventListener('change', updateFormState);
  ack2.addEventListener('change', updateFormState);
</script>
